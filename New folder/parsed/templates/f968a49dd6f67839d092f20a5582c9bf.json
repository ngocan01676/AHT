{"components/common/alert-error":"<div class=\"alertBox alertBox--error\">\r\n    <img src=\"{{cdn 'assets/img/error-icon.svg'}}\">\r\n    <span>{{{this}}}</span>\r\n    <i class=\"far fa-times\"></i>\r\n</div>\r\n","components/page/contact-us-form":"<form data-contact-form id=\"form\" class=\"form\" action=\"{{urls.contact_us_submit}}\" method=\"post\">\r\n    <h4 class=\"contact-us-page\">Contact Form</h4>\r\n    <h4 class=\"custom-work-page\">Enquiry Form</h4>\r\n    <h4 class=\"titlte-form-seseller-page\">Become a Reseller</h4>\r\n    {{inject 'contactEmail' (lang 'forms.validate.contact.email_address')}}\r\n    {{inject 'contactCompany' (lang 'forms.validate.contact.company')}}\r\n    {{inject 'contactName' (lang 'forms.validate.contact.name')}}\r\n    {{inject 'contactQuestion' (lang 'forms.validate.contact.question')}}\r\n    {{#if forms.contact.error}}\r\n    <div id=\"contact-us-error\">{{> components/common/alert-error forms.contact.error}}</div>\r\n    {{/if}}\r\n    <input type=\"hidden\" name=\"page_id\" id=\"page_id\" value=\"{{forms.contact.page_id}}\">\r\n    <div class=\"form-row form-row--half\">\r\n        {{#if forms.contact.name}}\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"contact_fullname\">{{lang 'forms.contact_us.full_name'}} *</label>\r\n                <input class=\"form-input\" type=\"text\" id=\"contact_fullname\" name=\"contact_fullname\" value=\"{{customer.name}}\">\r\n            </div>\r\n        {{/if}}\r\n\r\n        {{#if forms.contact.company}}\r\n        <div class=\"form-field\">\r\n            <label class=\"form-label label-default\" for=\"contact_companyname\">{{lang 'forms.contact_us.company'}}</label>\r\n            <label class=\"form-label label-reseller\" for=\"contact_companyname\">Business Name</label>\r\n            <input class=\"form-input\" type=\"text\" id=\"contact_companyname\" name=\"contact_companyname\">\r\n        </div>\r\n        {{/if}}\r\n\r\n        {{#if forms.contact.phone}}\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"contact_phone\">{{lang 'forms.contact_us.phone'}}</label>\r\n                <input class=\"form-input\" type=\"number\" id=\"contact_phone\" name=\"contact_phone\" value=\"{{customer.phone}}\">\r\n            </div>\r\n        {{/if}}\r\n\r\n        <div class=\"form-field\">\r\n            <label class=\"form-label\" for=\"contact_email\">{{lang 'forms.contact_us.email'}} *</label>\r\n            <input class=\"form-input\" type=\"text\" id=\"contact_email\" name=\"contact_email\" value=\"{{customer.email}}\">\r\n        </div>\r\n\r\n        {{#if forms.contact.order}}\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"contact_orderno\">{{lang 'forms.contact_us.order'}}</label>\r\n                <input class=\"form-input\" type=\"text\" id=\"contact_orderno\" name=\"contact_orderno\">\r\n            </div>\r\n        {{/if}}\r\n\r\n        {{#if forms.contact.rma}}\r\n            <div class=\"form-field\">\r\n                <label class=\"form-label\" for=\"contact_rma\">{{lang 'forms.contact_us.rma'}}</label>\r\n                <input class=\"form-input\" type=\"text\" id=\"contact_rma\" name=\"contact_rma\">\r\n            </div>\r\n        {{/if}}\r\n    </div>\r\n\r\n    <div class=\"form-field\">\r\n        <label class=\"form-label label-default\" for=\"contact_question\">{{lang 'forms.contact_us.question'}} *</label>\r\n        <label class=\"form-label label-reseller\" for=\"contact_question\">Details *</label>\r\n        <textarea name=\"contact_question\" id=\"contact_question\" rows=\"5\" cols=\"50\" class=\"form-input\"></textarea>\r\n    </div>\r\n\r\n    {{{forms.contact.recaptcha.markup}}}\r\n\r\n    <div class=\"form-actions\">\r\n        <input class=\"button button--primary\" type=\"submit\" value=\"{{lang 'forms.contact_us.submit' }}\">\r\n    </div>\r\n</form>\r\n"}
