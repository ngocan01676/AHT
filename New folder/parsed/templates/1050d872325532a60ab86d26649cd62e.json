{"components/account/address-list":"{{#unless customer.addresses}}\r\n{{> components/common/alert-info (lang 'account.addresses.no_addresses')}}\r\n{{/unless}}\r\n\r\n<ul class=\"addressList\">\r\n    {{#each customer.addresses}}\r\n    <li class=\"address\">\r\n        <div class=\"panel panel--address\">\r\n            <div class=\"panel-body\">\r\n                <h5 class=\"address-title\">{{first_name}} {{last_name}}</h5>\r\n                <ul class=\"address-details address-details--postal\">\r\n                   <!--  <li>{{company}}</li> -->\r\n                   <li>{{address1}}</li>\r\n                   <!-- <li>{{address2}}</li> -->\r\n                   <li>{{#if city}}{{city}},&nbsp{{/if}}{{#if state}}{{state}},&nbsp{{/if}}{{#if zip}}{{zip}},&nbsp{{/if}}{{country}}</li>\r\n\r\n               </ul>\r\n               {{#if phone}}\r\n               <dl class=\"address-details\">\r\n                <dt class=\"address-label\">{{lang 'account.addresses.phone' }}</dt>\r\n                <dd class=\"address-description\">{{phone}}</dd>\r\n            </dl>\r\n            {{/if}}\r\n            {{#if company}}\r\n            <dl class=\"address-details\">\r\n                <dt class=\"address-label\">Company: </dt>\r\n                <dd class=\"address-description\">{{company}}</dd>\r\n            </dl>\r\n            {{/if}}\r\n            <form action=\"{{delete_url}}\" method=\"post\" data-delete-address=\"{{lang 'forms.address.confirm_delete'}}\">\r\n                <div class=\"form-actions\">\r\n                    <a class=\"button button--primary button--small\" href=\"{{edit_url}}\">{{lang 'common.edit' }}</a>\r\n                    <button type=\"submit\" class=\"button secondary button--small\">{{lang 'common.delete' }}</button>\r\n                </div>\r\n            </form>\r\n        </div>\r\n    </div>\r\n</li>\r\n{{/each}}\r\n<li class=\"address\">\r\n    <a class=\"panel panel--address panel--newAddress\" href=\"{{urls.account.add_address}}\">\r\n        <span class=\"panel-body\">\r\n            <span class=\"address-addNew\">\r\n                <div class=\"wrappers\">\r\n                    <p class=\"address-symbol\"><i class=\"fas fa-plus\"></i></p>\r\n                    <p class=\"address-title\">{{lang 'account.addresses.new_address' }}</p>\r\n                </div>\r\n\r\n            </span>\r\n        </span>\r\n    </a>\r\n</li>\r\n</ul>\r\n","components/common/alert-info":"<div class=\"alertBox alertBox--info\">\r\n    <img src=\"{{cdn 'assets/img/bell-icon.svg'}}\">\r\n    <span>{{{this}}}</span>\r\n    <i class=\"far fa-times\"></i>\r\n</div>\r\n"}
